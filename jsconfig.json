{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "react",

    "sourceMap": true,
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"]
    }
  },
  "exclude": ["node_modules/**/*"],
  "include": ["src/**/*"]
}
